{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": ".",
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
